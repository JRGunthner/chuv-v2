#include "Buzzer.h"
#include "PWM.h"

#include "stm32f0xx.h"                  // STM32F0xx Definitions

//==================================================================================================
//
//==================================================================================================
void Buzzer_Init (void)
{
	PWM_Init ();
}

//==================================================================================================
//
//==================================================================================================
void Buzzer_On()
{
	PWM_SetDutyCycle (PWM_CHANNEL_BUZZER,   25);
}

//==================================================================================================
//
//==================================================================================================
void Buzzer_Off()
{
	PWM_SetDutyCycle (PWM_CHANNEL_BUZZER,   0);
}
